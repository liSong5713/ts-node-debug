{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc",
      "command": "node",
      // "isShellCommand": true,
      "args": [
        "./node_modules/typescript/lib/tsc.js",
        "-w",
        "-p",
        "./tsconfig.build.json"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "revealProblems": "always"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      //"showOutput": "silent",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}
